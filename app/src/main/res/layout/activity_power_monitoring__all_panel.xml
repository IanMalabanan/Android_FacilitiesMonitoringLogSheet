<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="com.example.ianmalabanan.facilitiesmonitoringlogsheet.ActivityPowerMonitoring_AllPanel">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0762b3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeaderRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:text="Records"
            android:textColor="#F0F8FF"
            android:textSize="25dp" />


        <ImageButton
            android:id="@+id/btnRefreshAllPanelLists"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_dark"
            android:src="@drawable/ic_refresh"
            android:textColor="@color/abc_primary_text_disable_only_material_dark" />

    </RelativeLayout>


    <ListView
        android:id="@+id/listViewPowerPanels"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
