<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="com.example.ianmalabanan.facilitiesmonitoringlogsheet.ActivityWaterMonitoring_Logs">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="#0762b3"
        android:orientation="horizontal">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Location: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:textStyle="bold" />-->

        <TextView
            android:id="@+id/tbViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="MDP-1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFF"
            android:textSize="25dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0762b3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHeaderRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="10dp"
            android:text="Records"
            android:textColor="#F0F8FF"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <ImageButton
                android:id="@+id/btnAddWaterLog"
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_dark"
                android:src="@drawable/ic_add"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

            <ImageButton
                android:id="@+id/btnGenerateWaterLogs"
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_dark"
                android:src="@drawable/ic_refresh"
                android:textColor="@color/abc_primary_text_disable_only_material_dark" />

        </LinearLayout>

    </RelativeLayout>


    <!--<Button
        android:id="@+id/btnAddWaterLog"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_dark"
        android:text="New"
        android:textColor="@color/abc_primary_text_disable_only_material_dark" />

    <Button
        android:id="@+id/btnGenerateWaterLogs"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Refresh"
        android:textColor="@color/abc_primary_text_disable_only_material_dark" />-->

    <ListView
        android:id="@+id/listViewWaterLogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
